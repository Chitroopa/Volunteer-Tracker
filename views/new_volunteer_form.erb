<form action="/volunteer/new" method="post">
  <h4>Enter volunteer information</h4>
  
  <div class="form-group row">
    <label for="name" class="col-sm-2 form-control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="name" required placeholder="Bob Smith">
    </div>
  </div>

  <div class="form-group row">
    <label for="phone_number" class="col-sm-2 form-control-label">Phone number</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="phone_number" placeholder="xxx-xxx-xxxx" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="hours" class="col-sm-2 form-control-label">Volunteer hours</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" name="hours" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="project_id" class="col-sm-2 form-control-label">Assign to project</label>
    <div class="col-sm-10">
      <select id='project_id' name='project_id' type='text'>
        <% @projects.each() do |project| %>
          <option value="<%= project.id()%>"> <%= project.name() %> </option>
        <% end %>
        <option value="nil"> Yet to decide </option>
      </select>
    </div>
  </div>
  <h6><i>*Assign to project: "Yet to decide" - No project is assigned to the volunteer</i></h6>
  <button type="submit" class="btn btn-primary">Save</button>
</form>

<div class="row">
  <br>
  <div class="col-md-2">
    <a href="/volunteers" class = "btn btn-success active" role = "button">Go Back</a>
  </div>
</div>
