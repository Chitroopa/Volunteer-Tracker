<h3>Here are the projects in this database:</h3>

<% if @projects.any?() %>
  <p>Click on a project to view details</p>

  <ul>
    <% @projects.each do |project| %>
      <li><a href="/projects/<%= project.id() %>"><%= project.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no projects added yet!</p>
<% end %>

<div class="row">
  <div class="col-md-3">
    <a href="/" class = "btn btn-success active" role = "button">Home</a>
  </div>
  <div class="col-md-3">
    <a href="/project/new" class = "btn btn-primary active" role = "button">Add a new project</a>
  </div>
</div>
