<h1><%= @volunteer.name() %></h1><br>

<form action="/volunteer/update/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="hour">Enter hours:</label>
  <input id="hour" name="hour" type="text" required>
  <button type="submit" class="btn btn-primary">Update</button>
</form>

<a href="/volunteers" class = "btn btn-success active" role = "button">Go Back</a>
